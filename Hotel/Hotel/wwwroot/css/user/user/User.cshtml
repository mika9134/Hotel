@model Hotel.Models.RoomServiceU


@{
    ViewData["Title"] = "Create";
}


<!doctype html>
<html lang="en">
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">

        <meta name="description" content="">
        <meta name="author" content="">

        <title>Room Services</title>

        <!-- CSS FILES -->        
        <link rel="preconnect" href="https://fonts.googleapis.com">
        
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        
        <link href="https://fonts.googleapis.com/css2?family=Outfit:wght@100;200;400;700&display=swap" rel="stylesheet">
                
        <link href="css/bootstrap.min.css" rel="stylesheet">

        <link href="css/bootstrap-icons.css" rel="stylesheet">

        <link href="css/user.css" rel="stylesheet">


    </head>
    
    <body>

        <main>

            <header class="site-header">
                <div class="container">
                    <div class="row">
                        
                        <div class="col-lg-12 col-12 d-flex flex-wrap">
                            <p class="d-flex me-4 mb-0">
                                
                                <strong class="text-dark">Room Services</strong>
                            </p>
                        </div>

                    </div>
                </div>
            </header>



            <section class="ticket-section section-padding">
                <div class="section-overlay"></div>

                <div class="container">
                    <div class="row">

                        <div class="col-lg-6 col-10 mx-auto">
                            <form asp-action="Create" class="custom-form ticket-form mb-5 mb-lg-0" >
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <h2 class="text-center mb-4">Please enter your room description</h2>

                                <div class="ticket-form-body">
                                    <div class="row">
                                        <div class="col-lg-6 col-md-6 col-12">
                                            <h6>Room Id</h6>
                                            <input asp-for="RoomId" type="text" name="ticket-form-name" id="ticket-form-name" class="form-control" placeholder="RoomId" required>
                                            <span asp-validation-for="RoomId" class="text-danger"></span>
                                        </div>
                                        <h6>Room Description</h6>
                                        <div class="col-lg-6 col-md-6 col-12">
                                            <input asp-for="RoomDescription"  name="ticket-form-email" id="ticket-form-email"  class="form-control" placeholder="RoomDescription" required>
                                            <span asp-validation-for="RoomDescription" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-lg-6 col-md-6 col-12">
                                    <h6>Room Price</h6>
                                    <input asp-for="RoomPrice" class="form-control" name="ticket-form-phone" placeholder="RoomPrice">
                                    <span asp-validation-for="RoomPrice" class="text-danger"></span>
                                    </div>
                                    
                                    <div class="col-lg-6 col-md-6 col-12">
                                    <h6>Check in</h6>
                                    
                                    <input type="radio" asp-for="checkin" required>
                                    <span asp-validation-for="checkin" class="text-danger"></span>
                                    </div>
                                    <div class="col-lg-6 col-md-6 col-12">
                                        <br>
                                    <h6>Check out</h6>
                                    
                                    <input type="radio" asp-for="checkout" >
                                    <span asp-validation-for="checkout" class="text-danger"></span>
                                    </div>
                                    <div class="col-lg-4 col-md-10 col-8 mx-auto">
                                        <button value="Create" type="submit" class="form-control">Finish</button>
                                    </div>
                                </div>
                            </form>
                    </div>
                </div>
                <div>
                    <a asp-action="Index">Back to List</a>
                </div>
                
            </section>
        </main>


        <footer class="site-footer">
           
            <div class="site-footer-bottom">
                <div class="container">
                    <div class="row">

                        <div class="col-lg-3 col-12 mt-5">
                            <p class="copyright-text">Â© ALH Hotel</p>
                        </div>

                        <div class="col-lg-8 col-12 mt-lg-5">
                            <ul class="site-footer-links">
                                <li class="site-footer-link-item">
                                    <a href="#" class="site-footer-link">Terms &amp; Conditions</a>
                                </li>

                                <li class="site-footer-link-item">
                                    <a href="#" class="site-footer-link">Privacy</a>
                                </li>

                                
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </footer>
        @section Scripts {
            @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
        }
       
    </body>
</html> 

        <!-- JAVASCRIPT FILES -->
        <script src="js/jquery.min.js"></script>
        <script src="js/bootstrap.min.js"></script>
        <script src="js/jquery.sticky.js"></script>
        <script src="js/custom.js"></script>
