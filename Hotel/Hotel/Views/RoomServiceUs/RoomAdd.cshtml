@using Hotel.Models;

@model List<RoomServiceU>

@{

    Layout = "_Layout";
    var plist = ViewBag.RoomServiceU;
}


<div class="container">
    <h4 class="display-4">All Rooms</h4>
    <div class="row">
        @foreach (var p in @Model)
        {
            <div class="col-md-4">
                <div class="card mb-4 shadow-sm" style="width: 18rem;">
                    <img src="../"width="50" height="150" class="card-img-top" alt="...">
                    <div class="card-body">
                        <h3 class="card-title">@p.RoomId</h3>
                        <h3 class="card-title">@p.checkin</h3>
                        <h3 class="card-title">@p.checkout</h3>
                        <p class="card-text">@p.RoomDescription</p>

                        <div class="d-flex justify-content-between align-items-center">
                            <div class="btn-group">
                                @*<a href="/product/getproductbyid2/@p.Product2Id" class="btn btn-sm btn-outline-secondary">View Detail</a>*@
                            </div>
                            <small class="text-muted">Item Unique Name</small>
                        </div>
                    </div>
                </div>
            </div>
        }

    </div>
</div>
