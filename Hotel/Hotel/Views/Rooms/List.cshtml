@using Hotel.Models;
@model List<Room>

@{
    Layout = "_Layout";
    //var plist = ViewBag.products;
}

<div class="container">
    <h4 class="display-4">List of Rooms</h4>
    <div class="row">
        @foreach (var p in @Model)
        {
            <div class="col-md-4">
                <div class="card mb-4 shadow-sm" style="width: 18rem;">
                    <img src="~/@p.imagePath" width="50" height="150" class="card-img-top" alt="...">
                    <div class="card-body">
                      @*  <h3 class="card-title">@p.productName</h3>*@
                        <p class="card-text">@p.RoomDescription</p>

                    </div>
                    <div class="card-footer text-center">

                        <a asp-action="getroombyid" asp-controller="Rooms" asp-route-id="@p.RoomId" class="btn btn-sm btn-outline-secondary">View Detail</a>
                        <a asp-action="Edit" asp-controller="Rooms" asp-route-id="@p.RoomId" class="btn btn-sm btn-primary">Edit</a>
                        <a asp-action="Delete" asp-controller="Rooms" asp-route-id="@p.RoomId" class="btn btn-sm btn-primary">Delete</a>


                    </div>
                </div>
            </div>
        }

    </div>
</div>