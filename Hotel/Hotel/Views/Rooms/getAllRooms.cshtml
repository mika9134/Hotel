@using Hotel.Models;
@model IEnumerable<Room>

@{
    Layout = "_Layout";
    var plist = ViewBag.Room;
}

<div class="container">
    <h4 class="display-4">All Rooms</h4>
    <div class="row">
        @foreach (var r in @Model)
        {
            <div class="col-md-4">
                <div class="card mb-4 shadow-sm" style="width: 18rem;">
                    <img src="~/Image/bed1.jpg" width="50" height="150" class="card-img-top" alt="...">
                    <div class="card-body">@*
                       <*h3 class="card-title">@p.productName</h3>*@
                        <p class="card-text">@r.RoomDescription</p>
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="btn-group">
                                <a href="/rooms/getroombyid/@r.RoomId" class="btn btn-sm btn-outline-secondary">View Detail</a>
                            </div>
                            <small class="text-muted">Item Unique Name</small>
                        </div>
                    </div>
                </div>
            </div>
        }

    </div>
</div>
