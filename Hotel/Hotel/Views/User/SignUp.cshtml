@model Hotel.Models.SignUpModel;
<!DOCTYPE html>
<head>
    <title>Register</title>
    <link rel="stylesheet" href="/css/Registration/Reg.css">
</head>
<body>
   @* <header>
        <h2 class="logo">Car rental</h2>
